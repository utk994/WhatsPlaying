<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/song"
    android:layout_width="match_parent" android:layout_height="800dp"
    android:layout_gravity="center" android:orientation="horizontal"
    android:padding="15dp"
    android:weightSum="1">



    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/coverfor"
        android:layout_gravity="center"
        android:focusableInTouchMode="false"
        app:border_color="@color/material_blue_grey_800"
        app:border_width="2dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User"
                android:id="@+id/sharedby"
                android:layout_marginTop="15dp"
                android:textColor="@color/purple"
                android:padding="5dp"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/viewprofile"
                android:background="@drawable/viewprof"
                android:layout_gravity="bottom"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Song Name"
            android:id="@+id/songname"
            android:padding="5dp"
            android:textSize="18dp"
            android:textColor="@color/purple" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Artist"
            android:id="@+id/artist"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="@color/purple1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Album Name"
            android:id="@+id/album"
            android:padding="5dp"
            android:textSize="14dp"
            android:textColor="@color/purple1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/listenonline"
            android:background="@drawable/listenonline1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>